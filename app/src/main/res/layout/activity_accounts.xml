<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accounts_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logged In Facebook Accounts" />

    <fragment
        android:id="@+id/accounts_profile_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="net.garrettsites.picturebook.fragments.UserFacebookProfile"
        tools:layout="@layout/fragment_user_facebook_profile">
    </fragment>

    <Button
        android:id="@+id/accounts_add_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in / Log out account" />

</LinearLayout>

