<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="startSlideshow"
            android:text="View Random Album" />

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="chooseAlbum"
            android:text="Choose Album" />

    </LinearLayout>

    <fragment
        android:name="net.garrettsites.picturebook.fragments.ManageAccountsFragment"
        android:id="@+id/accounts_profile_fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_user_accounts" />

    <fragment
        android:name="net.garrettsites.picturebook.fragments.SleepScheduleConfig"
        android:id="@+id/fragment_sleep_schedule_included_in_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_sleep_schedule_config"/>

</LinearLayout>